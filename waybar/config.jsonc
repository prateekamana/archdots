{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 4,
    "margin-top": 6,
    "margin-left": 5,
    "margin-right": 5,

    "modules-left": [ "clock", "custom/spotify"/*,"custom/wallpaper", "custom/lightmode"*/],
    "modules-center": ["hyprland/workspaces"/*"custom/active_workspace", "custom/active_toplevel"*/],
    "modules-right": [/*"backlight/slider", "custom/externalip",*/ "network", "pulseaudio", "battery"],
    "custom/active_workspace": {
        "exec": "~/.scripts/active_workspace.sh",
        "format": "Workspace {}", 
        "interval": 1,
        "tooltip": false
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    
    "custom/spotify": {
	    "exec": "/usr/bin/python3 /home/amana/.config/waybar/mediaplayer.py --player spotify",
	    "format": "{} ÔÜº",
	    "return-type": "json",
	    "on-click": "playerctl play-pause",
	    "on-scroll-up": "playerctl next",
	    "on-scroll-down": "playerctl previous"
    },
    "hyprland/workspaces": {
	"format": "{icon}",
	"format-icons": {
		"1": "Ôâ®",
		"2": "Û∞®û",
		"3": "ÔÜò",
		"4": "Û∞†Æ",
		"5": "ÔÑ†",
		"6": "ÔÅª",
		"7": " Ôéí",
		"8": "Û±óé",
		"9": "ÔÜº",
		//"active": "ÔÜí",
		//"default": "ÔÑë"
	},
       "persistent-workspaces": {
             "*": 6, // 5 workspaces by default on every monitor
             //"HDMI-A-1": 3 // but only three on HDMI-A-1
       }
    },
    "custom/active_toplevel": {
        "exec": "~/.scripts/active_toplevel.sh",
        "format": "{}", 
        "interval": 1,
        "tooltip": false
    },

    "cpu": {
        "format": "Û∞ª† {usage}%",
        "on-click": "alacritty -e btop &",
        "interval": 1
    },

    "clock": {
        "format": "ÓéÖ {:%H:%M}",
        "format-alt": "ÓéÖ {:%a, %d. %b  %H:%M}",
        "tooltip": false
    },




    "network": {
        "interface": "wlan0",
        "format": "{ifname}",
        "format-alt": "{ipaddr}",
        "format-wifi": "{essid} Ôá´ ",
        "format-ethernet": "{ifname} ÔÉÅ",
        "format-disconnected": "", //An empty format will hide the module.
        "format-disconnected": "",
        "tooltip-format": "{ifname}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        "max-length": 50
        //"on-click": "/home/danihek/tmp/iwdrof/iwdrof.sh"
    },

    "custom/lightmode": {
        "format": "ÔàÑ ",
        "format-alt": "ÔàÖ ",
        "tooltip": false,
        "on-click": "wallset toggle"
    },


    "memory": {
        "on-click": "alacritty -e btop &",
        "format": "  {}%",
        "interval": 1

    },

    "battery": {
        "format": "ÔâÅ  {capacity}%",
        "format-charging": "‚ö° {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%"

    },

    "pulseaudio": {
        "format": "ÔÄ®   {volume}%",
        "format-muted": "Ôë¶  Muted"
    },
    
    "custom/wallpaper":{
	    "format": "Û∞∏â",
        "tooltip": false,
	    "on-click": "wallset"
    },

    "custom/power":{
	    "format": "‚èª",
        "tooltip": false,
	    "on-click": "wlogout"
    },

    "backlight/slider": {
             "min": 0,
             "max": 100,
             "orientation": "horizontal",
             "device": "nvidia_0"
     },
    "custom/externalip": {
        "format": "{}",
        "exec": "curl -s ifconfig.me",
        "interval": 300,  // Check every 5 minutes (300 seconds)
        "tooltip": false
    }
}

